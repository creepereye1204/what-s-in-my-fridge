<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/myFridge"
        android:layout_width="251dp"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:text="@string/myRefrigerator"
        app:layout_constraintBottom_toTopOf="@+id/showReceipe"
        app:layout_constraintEnd_toEndOf="@+id/showReceipe"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/showReceipe"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/showReceipe"
        android:layout_width="251dp"
        android:layout_height="0dp"
        android:layout_marginBottom="41dp"
        android:text="@string/showReceipt"
        app:layout_constraintBottom_toTopOf="@+id/community"
        app:layout_constraintEnd_toEndOf="@+id/community"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/community"
        app:layout_constraintTop_toBottomOf="@+id/myFridge" />

    <Button
        android:id="@+id/community"
        android:layout_width="251dp"
        android:layout_height="0dp"
        android:layout_marginBottom="143dp"
        android:text="@string/community"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showReceipe" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="93dp"
        android:text="@string/app_name_ko"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/myFridge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>